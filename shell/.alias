# Open dotfiles in Atom
alias dotfiles="vim $HOME/dotfiles"
alias vimrc="vim $HOME/.config/nvim/init.vim"

# List npm modules global/local
alias ng="npm list -g --depth=0 2>/dev/null"
alias nl="npm list --depth=0 2>/dev/null"

# Network
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"

# Recursively remove Apple meta files
alias cleanupds="find . -type f -name '*.DS_Store' -ls -exec /bin/rm {} \;"
alias cleanupad="find . -type d -name '.AppleD*' -ls -exec /bin/rm -r {} \;"

# vim -> nvim
alias vim=nvim

# Reload shell
alias rl="exec $SHELL"

# Load envs
alias l-jenv="if which jenv > /dev/null; then eval '$(jenv init -)'; fi"
alias l-pyenv="if which pyenv > /dev/null; then eval '$(pyenv init -)'; fi"
alias l-rbenv="if which rbenv > /dev/null; then eval '$(rbenv init -)'; fi"
